{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ task.date ? task.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'Category'|trans }}</th>
                <td>{{ task.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">{{ 'back to list'|trans }}</a>
{% endblock %}
