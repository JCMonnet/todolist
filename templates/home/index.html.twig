{% extends 'base.html.twig' %}

{% block title %}
	todolist!
{% endblock %}

{% block header %}
			<header class="d-flex flex-row justify-content-around align-items-center">
				<h1 class="text-capitalize fw-bold">{{ 'Welcome on to do list app!'|trans }}</h1>
				<img style="width:10%; height:10%" src="https://www.lecadeau-ce.com/161465-tm_thickbox_default/stick-me-pense-bete-repositionnable-personnalisable.jpg">
				<nav class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{ app.request.locale|locale_name(app.request.locale)|u.title }}
					</a>
					<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
						<li>
							<a class="dropdown-item" href="{{ path('app_home', {_locale: 'en'}) }}">{{ 'English'|trans }}</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_home', {_locale: 'fr'}) }}">{{ 'French'|trans }}</a>
						</li>
					</ul>
				</nav>
			</header>
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			/* max-width: 800px;
			width: 95%; */
			font: 18px / 1.5 sans-serif;
			background: grey;
		}
		.example-wrapper code {
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h3 class="mt-5">{{ 'What would you like to?'|trans }}</h3>
		<a style="color:white" href="{{ path('app_login') }}">{{ 'log in to your account'|trans }}</a><br>
		<a style="color:white" href="{{ path('app_task_index') }}">{{ 'manage your tasks'|trans }}</a><br>
		<a style="color:white" href="{{ path('app_register') }}">{{ 'create an account'|trans }}</a>
	</div>
{% endblock %}
